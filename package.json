{
  "name": "HapiTS-MongoStarter",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon",
    "start": "tsc && node -r tsconfig-paths/register dist/index.js",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "format": "prettier --write 'src/**/*.{js,ts}'",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "Akhshy Ganesh",
  "description": "",
  "dependencies": {
    "@hapi/hapi": "^21.3.10",
    "joi": "^17.13.3",
    "mongoose": "^8.4.5"
  },
  "devDependencies": {
    "@types/hapi__hapi": "^21.0.0",
    "@types/node": "^20.14.10",
    "dotenv": "^16.4.5",
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
